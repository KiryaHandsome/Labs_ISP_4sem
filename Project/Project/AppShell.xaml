<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="Calculator">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:Calculator}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Progress Bar">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:ProgressBar}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Hotel Service">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:HotelService}" />
        </Tab>
    </FlyoutItem>
</Shell>
